{
  "seedVersion": "SEED_VERSION",
  "job": {
    "name": "addition-algorithm",
    "algorithmVersion": "0.0.1",
    "packageVersion": "1.0.0",
    "title": "Number Addition",
    "description": "Adds numbers together",
    "authorName": "Emily Smith",
    "timeout": 10,
    "interface": {
      "cmd": "${INPUT_FILE} ${JOB_OUTPUT_DIR}",
      "resources": {
        "scalar": [
          { "name": "cpu", "value": 0.1 },
          { "name": "mem", "value": 1.0 },
          { "name": "disk", "value": 1.0, "inputMultiplier": 1.0 }
        ]
      },
      "inputData": {
        "files": [
          {
            "name": "INPUT_FILE",
            "required": true,
            "mediaType": [
              "text/plain"
            ]
          }
        ]
      },
      "outputData": {
        "files": [
          {
            "name": "OUTPUT_FILE",
            "mediaType": "text/plain",
            "pattern": "*_output.txt",
            "count": "4"
          }
        ],
        "json": [
          {
            "name": "x",
            "type": "integer"
          },
          {
            "name": "y",
            "type": "integer"
          },
          {
            "name": "z",
            "key": "total",
            "type": "integer"
          }
        ]
      },
      "mounts": [
        {
          "name": "MOUNT1",
          "path": "/usr/bin/",
          "mode": "ro"
        },
        {
          "name": "MOUNT2",
          "path": "/tmp/",
          "mode": "rw"
        }
      ]
    },
    "errorMapping": [
      {
        "code": 1,
        "title": "No Input Provided",
        "description": "No input files have been given. No data to add.",
        "category": "data"
      }
    ]
  }
}
